<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$PE_DEVICE}</name>
      <config>
        <l2vpn xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <xconnect>
            <group>
              <name>{$SP_ID}-EVPN-VPWS</name>
              <p2p>
                <name>{$SP_ID}-{$PE_TARGET}</name>
                <interface>
                  <name>TenGigE{$PE_INTERFACE}.{$SUBIF_EV}</name>
                </interface>
                <neighbor-evpn>
                  <neighbor>
                    <evpn>
                      <evi>{$EVI}</evi>
                      <target>{$PE_TARGET}</target>
                      <source>{$PE_SOURCE}</source>
                    </evpn>
                  </neighbor>
                </neighbor-evpn>
              </p2p>
            </group>
          </xconnect>
        </l2vpn>
      </config>
    </device>
    <device>
      <name>{$POI_DEVICE}</name>
      <config>
        <l2vpn xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <!-- xconnect group evpn_vpws
                p2p ISPT
                  interface TenGigE0/0/2/0.500
                  neighbor evpn evi 540 target 40 source 40
                  !
                !
              ! -->
          <xconnect>
            <group>
              <name>{$SP_ID}-EVPN-VPWS</name>
              <p2p>
                <name>{$SP_ID}-{$POI_TARGET}</name>
                <interface>
                  <name>TenGigE{$TO_SP_IF}.{$SUBIF_EV}</name>
                </interface>
                <neighbor-evpn>
                  <neighbor>
                    <evpn>
                      <evi>{$EVI}</evi>
                      <target>{$POI_TARGET}</target>
                      <source>{$POI_SOURCE}</source>
                    </evpn>
                  </neighbor>
                </neighbor-evpn>
              </p2p>
            </group>
          </xconnect>
        </l2vpn>
      </config>
    </device>
  </devices>
</config-template>
