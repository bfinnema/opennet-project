<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$DEVICE}</name>
      <config>
        <interface xmlns="urn:ios">
          <GigabitEthernet>
            <name>0/0/{$CPE_ID}</name>
            <service>
              <instance>
                <id>{$INNER_VLAN}</id>
                <ethernet/>
                <encapsulation>
                  <dot1q>
                    <id>{$INNER_VLAN}</id>
                  </dot1q>
                </encapsulation>
                <rewrite>
                  <ingress>
                    <tag>
                      <pop>1</pop>
                      <mode>symmetric</mode>
                    </tag>
                  </ingress>
                </rewrite>
                <bridge-domain>
                  <bridge-id>{$BRIDGE_ID}</bridge-id>
                </bridge-domain>
              </instance>
            </service>
          </GigabitEthernet>
          <BDI>
            <name>{$BRIDGE_ID}</name>
            <vrf>
              <forwarding>vCPE{$CPE_ID}</forwarding>
            </vrf>
            <ip>
              <address>
                <dhcp/>
                <!-- <dhcp>
                  <client-id>
                    <Vlan>210</Vlan>
                  </client-id>
                  <hostname>vCPE1</hostname>
                </dhcp> -->
              </address>
            </ip>
          </BDI>
        </interface>
      </config>
    </device>
  </devices>
</config-template>
